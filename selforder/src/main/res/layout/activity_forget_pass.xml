<?xml version="1.0" encoding="utf-8"?>
<!-- 忘记密码界面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:focusable="true"
        android:focusableInTouchMode="true"
        style="@style/register_tv_style"
        android:text="手机/邮箱:"
        android:id="@+id/textView6"
        android:layout_marginLeft="274dp"
        android:layout_marginTop="106dp"

        />

    <EditText
        android:hint="请输入手机/邮箱"
        style="@style/register_et_style"
        android:id="@+id/et_phone_or_email"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        style="@style/new_tv_style"
        android:text="验证码:"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/et_phone_or_email"
        android:layout_toStartOf="@+id/et_phone_or_email" />

    <LinearLayout
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/et_phone_or_email"
        android:layout_alignStart="@+id/et_phone_or_email"
        android:id="@+id/linearLayout">

        <EditText
            android:background="@null"
            android:hint="请输入右侧的验证码"
            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/left_verification_code"
            />
        <ImageView
            android:scaleType="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/right_verification_code"
            android:layout_width="360px"
            android:layout_height="150px"
            />
    </LinearLayout>

    <Button
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="看不清,换一张"
        android:id="@+id/change_verification_code"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

    <Button
        android:textSize="40sp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="下一步"
        android:id="@+id/next_step_one"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
