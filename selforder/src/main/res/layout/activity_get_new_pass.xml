<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:focusable="true"
        android:focusableInTouchMode="true"
        style="@style/register_tv_style"
        android:text="       新密码:"
        android:id="@+id/textView8"
        android:layout_marginTop="156dp"
        />

    <EditText
        android:textSize="30sp"
        android:hint="请输入密码"
        style="@style/register_et_style"
        android:id="@+id/et_get_new_pass"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />


    <TextView
        android:layout_marginTop="30dp"
        style="@style/new_tv_style"
        android:text="确认新密码:"
        android:id="@+id/textView9"

        android:layout_below="@+id/textView8"
        android:layout_toLeftOf="@+id/et_get_new_pass"
        android:layout_toStartOf="@+id/et_get_new_pass" />
    <EditText
        android:textSize="30sp"
        android:hint="请再次输入新密码"
        style="@style/register_et_style"
        android:id="@+id/et_get_new_pass_again"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_marginTop="30dp"
        style="@style/new_tv_style"
        android:text="验证码:"
        android:id="@+id/textView10"

        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/et_get_new_pass_again"
        android:layout_toStartOf="@+id/et_get_new_pass_again" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/et_get_new_pass_again"
        android:layout_alignEnd="@+id/et_get_new_pass_again"
        android:background="#eeeeee"
        android:id="@+id/linearLayout2">

        <EditText
            android:gravity="center_vertical|left"
            android:background="@null"
            android:id="@+id/et_get_yanzheng"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:hint="请输入验证码"

            />
        <TextView
            android:gravity="center_vertical|right"
            android:id="@+id/tv_re_send"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="60s后再次发送"
            android:textSize="30sp"/>
    </LinearLayout>

    <TextView
        android:textSize="30sp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        style="@style/new_tv_style"
        android:text="Large Text"
        android:id="@+id/tv_send_phone_or_email"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2" />


    <Button
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="完成"
        android:gravity="center"
        android:id="@+id/button_re_pass_success"
        android:layout_below="@+id/tv_send_phone_or_email"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="30sp"

        android:layout_centerHorizontal="true"
        style="@style/new_tv_style"
        android:text="Small Text"
        android:id="@+id/tv_contact"
        android:layout_below="@+id/button_re_pass_success"
        />
</RelativeLayout>
