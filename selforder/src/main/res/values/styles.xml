<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style  name="register_hint_style">
        <item name="android:textColor">#55000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style  name="register_tv_style">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginLeft">243dp</item>
    </style>

    <style  name="register_et_style">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">#eeeeee</item>


    </style>

    <style  name="register_img_style">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:src">@drawable/cqy_face_sad</item>
        <item name="android:scaleType">center</item>


    </style>

    <style  name="new_tv_style">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>


</resources>
